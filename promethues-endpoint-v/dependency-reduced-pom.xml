<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>springboot-starter-yl-vertx-container</artifactId>
    <groupId>com.yl.container</groupId>
    <version>0.0.2</version>
    <relativePath>pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>promethues-endpoint-v</artifactId>
  <name>promethues-endpoint-v</name>
  <description>Demo project for Spring Boot with</description>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
      <resource>
        <targetPath>BOOT-INF/lib/</targetPath>
        <directory>src/main/resources/lib</directory>
        <includes>
          <include>**/*.jar</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <manifestEntries>
                    <Premain-Class>com.yl.promethues.v.endpoint.AgentStart</Premain-Class>
                  </manifestEntries>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>io.vertx</groupId>
      <artifactId>vertx-codegen</artifactId>
      <version>3.8.3</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>mvel2</artifactId>
          <groupId>org.mvel</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <spring-cloud.version>Hoxton.SR1</spring-cloud.version>
    <java.version>1.8</java.version>
  </properties>
</project>

